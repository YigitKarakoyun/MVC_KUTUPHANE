@using MVC_KUTUPHANE.Models.Entity
@model List<TBL_KATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Kategoriler</h1>
@* th kalın punto td ince punto yazılıyor. *@
<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>KATEGORİ İŞLEM</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.AD</td>
        <td>
            <a href="/Kategori/Sil/@item.ID" class="btn btn-danger">Sil</a>
            <a href="/Kategori/Getir/@item.ID" class="btn btn-success">Güncelle</a>
        </td>
    </tr>
    }
    
</table>

<a href="/Kategori/Ekle/" class="btn btn-primary">Yeni Kategori Ekle</a>