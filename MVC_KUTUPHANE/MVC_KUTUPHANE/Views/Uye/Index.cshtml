@using MVC_KUTUPHANE.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBL_UYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-bordered">
    <tr>
        <th>ÜYE ID</th>
        <th>ÜYE ADI</th>
        <th>ÜYE SOYADI</th>
        <th>MAİL</th>
        <th>KULLANICI ADI</th>
        <th>ŞİFRESİ</th>
        <th>TELEFON</th>
        <th>OKUL</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.ID</td>
        <td>@item.AD</td>
        <td>@item.SOYAD</td>
        <td>@item.MAIL</td>
        <td>@item.KULLANICIADI</td>
        <td>@item.SIFRE</td>
        <td>@item.TELEFON</td>
        <td>@item.OKUL</td>

        <td>
            <a href="/Uye/Sil/@item.ID" class="btn btn-danger">Sil</a>
        </td>
        <td>
            <a href="/Uye/Getir/@item.ID" class="btn btn-success">Güncelle</a>
        </td>
    </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new { sayfa}))
<a href="/Uye/Ekle/" style="margin-top:15px" class="btn btn-primary">Yeni Üye Ekle</a>