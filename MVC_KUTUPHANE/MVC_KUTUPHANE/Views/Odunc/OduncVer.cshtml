@model MVC_KUTUPHANE.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Ekleme</h2>

<form class="form-group" method="post" action="/Odunc/OduncVer/">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye ID</label>
        @Html.TextBoxFor(x => x.UYE, new { @class = "form-control" })

    </div>

    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @Html.TextBoxFor(x => x.KITAP, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input class="form-control" name="ALISTARIH" type="text" value="@DateTime.Now.ToShortDateString()"  />
        
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi</label>
        <input class="form-control" name="IADETARIH" type="text" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>

    </div>
    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:plum;color:white">Kitap Ödünç Ver</button>
    </div>
</form>

