@using MVC_KUTUPHANE.Models.Entity
@model List<TBL_HAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>
@using (Html.BeginForm("Index", "Odunc", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitap Adını Giriniz:</b>&nbsp @Html.TextBox("p")&nbsp
        <input type="submit" value="Ara" />
    </div>
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ID</td>
            <td>@item.TBL_KITAP.AD</td>
            <td>@item.TBL_UYELER.AD&nbsp @item.TBL_UYELER.SOYAD</td>
            <td>@item.TBL_PERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(@item.ALISTARIH).ToShortDateString()</td>
            <td>@Convert.ToDateTime(@item.IADETARIH).ToString("dd/MM/yyyy")</td>
            @*<td>@Convert.ToDateTime(@item.IADETARIH).ToString("dd/MMM/yyyy")</td>*@

            <td><a href="/Odunc/OduncIade/@item.ID" class="btn btn-default" style="background-color:mediumaquamarine;color:white">Kitabı İade Et</a></td>

        </tr>

        }
    </tbody>
</table>
